<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta name="description" content="" />
  <meta name="author" content="" />
  <title>@ViewData["Title"] - Quản lý</title>
  <link href="/css/styles.css" rel="stylesheet" />
  <link href="/css/custom.css" rel="stylesheet" />
  <link rel="stylesheet" type="text/css" href="/css/dataTables.bootstrap5.min.css">
  <link rel="stylesheet" type="text/css" href="~/libs/bootstrap-5.1.3-dist/css/bootstrap.css">
  <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css">
  <link rel="stylesheet" href="~/lib/fontawesome-iconpicker/css/fontawesome-iconpicker.min.css">
  <link rel="stylesheet" href="~/css/notify.css">
  <link rel="stylesheet" href="~/libs/Toastjs/toastr.min.css">
  <link rel="stylesheet" href="~/libs/jquery-confirm/jquery-confirm.min.css">

  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
  <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
    <!-- Navbar Brand-->
    <a class="navbar-brand ps-3" href="index.html">Chấm công</a>
    <!-- Sidebar Toggle-->
    <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
    <!-- Navbar Search-->
    <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
      <div class="input-group">
        <input class="form-control" type="text" placeholder="Tìm kiếm..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
        <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
      </div>
    </form>
    <!-- Navbar-->
    <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <li><a class="dropdown-item" href="#">Xin chào @User.Identity.Name</a></li>
          <li><a class="dropdown-item" asp-controller="TimeOffRequest" asp-action="IndexUser">Thông tin lịch xin nghỉ</a></li>
          <li><a class="dropdown-item" asp-controller="Shift" asp-action="IndexUser">Thông tin chấm công </a></li>
          <li><hr class="dropdown-divider" /></li>
          <form method="post" asp-controller="User" asp-action="Logout">
            <button type="submit" class="dropdown-item">Đăng xuất</button>
          </form>
        </ul>
      </li>
    </ul>
  </nav>
  <div id="layoutSidenav">
    <div id="layoutSidenav_nav">
      <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
        <div class="sb-sidenav-menu">
          <div class="nav">
            <div class="sb-sidenav-menu-heading">Core</div>
            <a class="nav-link" href="@Url.Action("Index", "Home")">
              <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
              Trang chủ
            </a>
            @if (ViewBag.Role == "Admin")
            {
              <div class="sb-sidenav-menu-heading">Quản lý</div>
              <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                Quản lý nhân viên
                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
              </a>
              <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                <nav class="sb-sidenav-menu-nested nav">
                  <a class="nav-link" asp-controller="User" asp-action="Index">Danh sách nhân viên</a>
                  <a class="nav-link" asp-controller="User" asp-action="Create">Thêm mới</a>
                </nav>
              </div>
              <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapsePages" aria-expanded="false" aria-controls="collapsePages">
                <div class="sb-nav-link-icon"><i class="fas fa-book-open"></i></div>
                Quản lý chung
                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
              </a>
              <div class="collapse" id="collapsePages" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion">
                <nav class="sb-sidenav-menu-nested nav accordion" id="sidenavAccordionPages">
                  <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#pagesCollapseAuth" aria-expanded="false" aria-controls="pagesCollapseAuth">
                    Quản lý cài đặt
                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                  </a>
                  <div class="collapse" id="pagesCollapseAuth" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordionPages">
                    <nav class="sb-sidenav-menu-nested nav">
                      <a class="nav-link" asp-controller="Department" asp-action="Index">Phòng ban</a>
                      <a class="nav-link" asp-controller="JobTitle" asp-action="Index">Chức danh</a>
                      <a class="nav-link" asp-controller="TimeOffType" asp-action="Index">Ngày nghỉ</a>
                      <a class="nav-link" asp-controller="Project" asp-action="Index">Dự án</a>
                      <a class="nav-link" asp-controller="ShiftSetting" asp-action="Index">Khai báo</a>
                    </nav>
                  </div>
                  <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#pagesCollapseError" aria-expanded="false" aria-controls="pagesCollapseError">
                    Quản lý hệ thống
                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                  </a>
                  <div class="collapse" id="pagesCollapseError" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordionPages">
                    <nav class="sb-sidenav-menu-nested nav">
                      <a class="nav-link" asp-controller="TimeOffRequest" asp-action="Index">Quản lý ngày nghỉ</a>
                      <a class="nav-link" asp-controller="Shift" asp-action="Index">Quản lý dự án</a>
                    </nav>
                  </div>
                </nav>
              </div>
            }
            @if (ViewBag.Role == "User" || ViewBag.Role == "Admin")
            {
              <div class="sb-sidenav-menu-heading">Nhân viên</div>
              <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayoutUser" aria-expanded="false" aria-controls="collapseLayouts">
                <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                Chấm công
                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
              </a>
              <div class="collapse" id="collapseLayoutUser" aria-labelledby="headingThree" data-bs-parent="#sidenavAccordion">
                <nav class="sb-sidenav-menu-nested nav">
                  <a class="nav-link" asp-controller="Project" asp-action="UserIndex">Khai báo chấm công</a>
                </nav>
              </div>
              <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayoutTimeOff" aria-expanded="false" aria-controls="collapseLayouts">
                <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                Lịch nghỉ
                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
              </a>
              <div class="collapse" id="collapseLayoutTimeOff" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                <nav class="sb-sidenav-menu-nested nav">
                  <a class="nav-link" asp-controller="TimeOffRequest" asp-action="IndexUser">Lịch nghỉ</a>
                  <a class="nav-link" asp-controller="TimeOffRequest" asp-action="Create">Thêm mới</a>
                </nav>
              </div>
            }
          </div>
        </div>
        <div class="sb-sidenav-footer">
          <div class="small">Đăng nhập bởi:</div>
          @User.Identity.Name
        </div>
      </nav>
    </div>
    <div id="layoutSidenav_content">
      <main>
        @RenderBody()
      </main>
      <footer class="py-4 bg-light mt-auto">
        <div class="container-fluid px-4">
          <div class="d-flex align-items-center justify-content-between small">
            <div class="text-muted">Copyright &copy; Your Website 2021</div>
            <div>
              <a href="#">Privacy Policy</a>
              &middot;
              <a href="#">Terms &amp; Conditions</a>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </div>
  <script src="/libs/bootstrap-5.1.3-dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <script src="/js/scripts.js"></script>
  <script src="/js/custom.js"></script>
  <script src="/libs/jquery/dist/jquery.min.js"></script>
  <script src="/js/jquery-confirm.js"></script>
  <script src="/js/notify.min.js"></script>
  <script src="/libs/Toastjs/toastr.min.js"></script>
  <script src="/libs/jquery-confirm/jquery-confirm.min.js"></script>
  <script src="/lib/fontawesome-iconpicker/js/fontawesome-iconpicker.min.js"></script>
  <script type="text/javascript" charset="utf8" src="/js/jquery.dataTables.min.js"></script>
  <script type="text/javascript" charset="utf8" src="/js/dataTables.bootstrap5.min.js"></script>
  @RenderSection("Scripts", required: false)
  @RenderSection("Styles", required: false)
</body>
</html>
