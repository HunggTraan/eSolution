@using eSolutionTech.ViewModels.Common

@model PagedResult<eSolutionTech.ViewModels.Catalog.Shifts.ShiftManageViewModel>
@{
  ViewData["Title"] = "Danh sách lịch chấm công";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
  <ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
    <li class="breadcrumb-item active">Danh sách lịch chấm công</li>
  </ol>
  <div class="card mb-12">
    <div class="card-header">
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <div><div class='box red'></div>&nbsp; Màu đỏ có nghĩa là đi muộn</div>
        </div>
        <div class="col-md-6 col-xs-12">
          <div><div class='box green'></div>&nbsp; Màu xanh lá có nghĩa là đi đi đúng giờ</div>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-md-6 col-xs-12">
          <b>Nhân viên: </b> @Model.Items[0].UserName - <b>Phòng ban: </b> @Model.Items[0].DepartmentName - <b>Chức vụ: </b> @Model.Items[0].JobTitleName
        </div>
        <div class="col-md-6 col-xs-12">
        </div>
      </div>
    </div>

    <div class="card-body">
      <div class="row">
        @if (ViewBag.SuccessMsg != null)
        {
          <div id="msgAlert" class="alert alert-success" role="alert">
            @ViewBag.SuccessMsg
          </div>
        }
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered" width="100%" id="dataTable">
          <thead>
            <tr>
              <th class="text-center">
                Mã nhân viên
              </th>
              <th class="text-center">
                Tên nhân viên
              </th>
              <th class="text-center">
                Dự án
              </th>
              <th class="text-center">
                Giờ vào
              </th>
              <th class="text-center">
                Giờ ra
              </th>
              <th class="text-center">
                Vào muộn
              </th>
            </tr>
          </thead>
          <tbody>
            @foreach (var item in Model.Items)
            {
            <tr>
              <td class="text-center">
                @Html.DisplayFor(modelItem => item.UserCode)
              </td>
              <td class="text-center">
                @Html.DisplayFor(modelItem => item.UserName)
              </td>
              <td class="text-center">
                @Html.DisplayFor(modelItem => item.ProjectName)
              </td>
              <td class="text-center">
                @Convert.ToDateTime(item.TimeIn).ToString("dd/MM/yyyy HH:mm")
              </td>
              <td class="text-center">
                @Convert.ToDateTime(item.TimeOut).ToString("dd/MM/yyyy HH:mm")
              </td>
              <td class="text-center">
                @if (item.isLate == 0)
                {
                  @if (item.Status == 1)
                  {
                    <i>Đã chấm công vào</i>
                  }
                  else
                  {
                    <i>Đã chấm đủ công</i>
                  }
                }
                else
                {
                  @if (item.Status == 1)
                  {
                    <i style="color:red">Đã chấm công vào</i>
                  }
                  else
                  {
                    <i style="color:red">Đã chấm đủ công</i>
                  }
                }
              </td>
            </tr>
            }
          </tbody>
          <tfoot>
            <tr>
              <th class="text-center">
                Mã nhân viên
              </th>
              <th class="text-center">
                Tên nhân viên
              </th>
              <th class="text-center">
                Dự án
              </th>
              <th class="text-center">
                Giờ vào
              </th>
              <th class="text-center">
                Giờ ra
              </th>
              <th class="text-center">
                Vào muộn
              </th>
            </tr>
          </tfoot>
        </table>
      </div>
      @await Component.InvokeAsync("Pager", Model)
    </div>
  </div>
</div>

@section Scripts{
  <script type="text/javascript">
    $(document).ready(function () {

      $('#dataTable tfoot th').each(function () {
        var title = $(this).text();
        $(this).html('<input type="text" placeholder="' + title + '" />');
      });

      var table = $('#dataTable').DataTable({
        "paging": false,
        "language": {
          "search": "Tìm kiếm:"
        },
        initComplete: function () {
          // Apply the search
          this.api().columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change clear', function () {
              if (that.search() !== this.value) {
                that
                  .search(this.value)
                  .draw();
              }
            });
          });
        }
      });
    });

  </script>
}


