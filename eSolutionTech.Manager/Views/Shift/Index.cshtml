@using eSolutionTech.ViewModels.Common

@model PagedResult<eSolutionTech.ViewModels.Catalog.Shifts.ShiftManageViewModel>
@{
  ViewData["Title"] = "Danh sách lịch chấm công";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
  <ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
    <li class="breadcrumb-item active">Danh sách lịch chấm công</li>
  </ol>
  <div class="card mb-12">
    <div class="card-header">
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <a class="btn btn-secondary" id="filter">Tìm kiếm</a>
        </div>
        <div class="col-md-6 col-xs-12">
        </div>
      </div>
    </div>
    <div class="card-header mt-4">
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <div><div class='box red'></div>&nbsp; Màu đỏ có nghĩa là chấm công muộn</div>
        </div>
        <div class="col-md-6 col-xs-12">
        </div>
      </div>
    </div>

    <div class="card-body">
      <div class="row">
        @if (ViewBag.SuccessMsg != null)
        {
          <div id="msgAlert" class="alert alert-success" role="alert">
            @ViewBag.SuccessMsg
          </div>
        }
      </div>

      <div class="card-header hidden" id="filterField">
        <form asp-action="Index" method="get">
          <div class="row">
            <div class="col-md-10">
              <div class="form-group row">
                <div class="col-md-2">
                  <label>Mã nhân viên</label>
                </div>
                <div class="col-md-4">
                  <input type="text" value="@ViewBag.Code" name="code" class="form-control" />
                </div>
                <div class="col-md-2">
                  <label>Họ và tên</label>
                </div>
                <div class="col-md-4">
                  <input type="text" value="@ViewBag.FullName" name="fullname" class="form-control" />
                </div>
              </div>
              <div class="form-group row mt-2">
                <div class="col-md-2">
                  <label>Chức vụ</label>
                </div>
                <div class="col-md-4">
                  <select asp-items="@ViewBag.Department" name="departmentId" class="form-control">
                    <option value="">Tất cả</option>
                  </select>
                </div>
                <div class="col-md-2">
                  <label>Phòng ban</label>
                </div>
                <div class="col-md-4">
                  <select asp-items="@ViewBag.JobTitle" name="jobTitleId" class="form-control">
                    <option value="">Tất cả</option>
                  </select>
                </div>
              </div>
              <div class="form-group row mt-2">
                <div class="col-md-2">
                  <label>Dự án</label>
                </div>
                <div class="col-md-4">
                  <select asp-items="@ViewBag.Project" name="projectId" class="form-control">
                    <option value="">Tất cả</option>
                  </select>
                </div>
                <div class="col-md-2">
                  <label>Trạng thái</label>
                </div>
                <div class="col-md-4">
                  <select name="status" class="form-control">
                    <option value="">Tất cả</option>
                    <option value="0">Chờ duyệt</option>
                    <option value="1">Đã duyệt</option>
                    <option value="2">Từ chối</option>
                  </select>
                </div>
              </div>
              <div class="form-group row mt-2">
                <div class="col-md-2">
                  <label>Từ ngày</label>
                </div>
                <div class="col-md-4">
                  <input id="fromDate" name="fromDate" type="text" value="@ViewBag.FromDate" class="form-control" />
                </div>
                <div class="col-md-2">
                  <label>Đến ngày</label>
                </div>
                <div class="col-md-4">
                  <input id="toDate" name="toDate" type="text" value="@ViewBag.ToDate" class="form-control" />
                </div>
              </div>
              <div class="form-group row mt-2">
                <div class="col-md-2">
                  <label>Trạng thái chấm công</label>
                </div>
                <div class="col-md-4">
                  <select name="isLate" class="form-control">
                    <option value="">Tất cả</option>
                    <option value="0">Đã chấm công</option>
                    <option value="1">Chấm công muộn</option>
                  </select>
                </div>
                <div class="col-md-2">
                </div>
                <div class="col-md-4">
                </div>
              </div>
            </div>
            <div class="col-md-2">
              <button type="submit" class="btn btn-primary">Tìm</button>
              <button type="button" onclick="window.location.href='/Shift/Index'" class="btn btn-secondary">Đặt lại</button>
            </div>
          </div>
        </form>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered" width="100%" id="dataTable">
          <thead>
            <tr>
              <th class="text-center">
                Mã nhân viên
              </th>
              <th class="text-center">
                Tên nhân viên
              </th>
              <th class="text-center">
                Dự án
              </th>
              <th class="text-center">
                Giờ vào
              </th>
              <th class="text-center">
                Giờ ra
              </th>
              <th class="text-center">
                Tổng thời gian làm việc
              </th>
              <th class="text-center">
                Trạng thái
              </th>
            </tr>
          </thead>
          <tbody>
            @foreach (var item in Model.Items)
            {
            <tr>
              <td class="text-center">
                @Html.DisplayFor(modelItem => item.UserCode)
              </td>
              <td class="text-center">
                <a href="#" onclick="details('@item.Id')">@Html.DisplayFor(modelItem => item.UserName)</a>
              </td>
              <td class="text-center">
                @Html.DisplayFor(modelItem => item.ProjectName)
              </td>
              <td class="text-center">
                @Convert.ToDateTime(item.TimeIn).ToString("dd/MM/yyyy HH:mm")
              </td>
              <td class="text-center">
                @Convert.ToDateTime(item.TimeOut).ToString("dd/MM/yyyy HH:mm")
              </td>
              <td class="text-center">
                @Html.DisplayFor(modelItem => item.WorkingHours)
              </td>
              <td class="text-center" id="status">
                @if (item.isLate == 0)
                {
                  @if (item.Status == 1)
                  {
                    <i>Đã chấm công vào</i>
                  }
                  else
                  {
                    <i>Đã chấm đủ công</i>
                  }
                }
                else
                {
                  @if (item.Status == 1)
                  {
                    <i style="color:red">Đã chấm công vào</i>
                  }
                  else
                  {
                    <i style="color:red">Đã chấm đủ công</i>
                  }
                }
              </td>
            </tr>
            }
          </tbody>
        </table>
      </div>
      @await Component.InvokeAsync("Pager", Model)
    </div>
  </div>
</div>

<div aria-hidden="true" class="inmodal modal" id="userModel" role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <div class="animated bounceInRight modal-content">
      <div class="modal-header">
        <h4 class="modal-title" style="margin-left:30%">Chi tiết nhân viên</h4>
      </div>
      <div class="modal-body">
        <div class="form-group row">
          <label class="col-form-label col-lg-5 font-bold">Mã nhân viên:</label>
          <div class="col-lg-7">
            <p class="form-control-plaintext lblCode"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-5 font-bold">Tên nhân viên:</label>
          <div class="col-lg-7">
            <p class="form-control-plaintext lblFullName"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-5 font-bold">Tên đăng nhập:</label>
          <div class="col-lg-7">
            <p class="form-control-plaintext lblUserName"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-5 font-bold">Phòng ban:</label>
          <div class="col-lg-7">
            <p class="form-control-plaintext lblDepartment"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-5 font-bold">Chức vụ:</label>
          <div class="col-lg-7">
            <p class="form-control-plaintext lblJobTitle"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-5 font-bold">Ngày:</label>
          <div class="col-lg-7">
            <p class="form-control-plaintext lblDate"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-5 font-bold">Trạng thái: </label>
          <div class="col-lg-7">
            <p class="form-control-plaintext lblStatus"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-5 font-bold">Trạng thái chấm công:</label>
          <div class="col-lg-7">
            <p class="form-control-plaintext lblIsLate"></p>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-white" data-bs-dismiss="modal" type="button">Đóng</button>
      </div>
    </div>
  </div>
</div>

@section Styles {
  <link href="~/libs/datetimepicker/jquery.datetimepicker.css" rel="stylesheet" />
}

@section Scripts{
  <script src="~/libs/datetimepicker/jquery.datetimepicker.full.js" type="text/javascript"></script>
  <script type="text/javascript">
    $(document).ready(function () {
      initDataTable();
    });


    $('#filter').on('click', function () {
      if ($('#filterField').is(":visible")) {
        $('#filterField').addClass('hidden');
      }
      else
        $('#filterField').removeClass('hidden');
    });

            function details(ids) {
      $.get(
        '@Url.Action("GetRequestById", "Shift")',
        { id: ids },
        (response) => {
          console.log(response);
          if (response != null) {
            let d = response;
            console.log(d);
            $('#userModel .modal-body .lblCode').html(d.userCode);
            $('#userModel .modal-body .lblFullName').html(d.userFullName);
            $('#userModel .modal-body .lblUserName').html(d.userName);
            $('#userModel .modal-body .lblJobTitle').html(d.jobTitle);
            $('#userModel .modal-body .lblDepartment').html(d.department);
            $('#userModel .modal-body .lblDate').html(d.time);
            $('#userModel .modal-body .lblStatus').html(d.statusText);
            $('#userModel .modal-body .lblIsLate').html(d.isLateText);
            $('#userModel').modal('show');
          }
        }
      )
    }

    $('#fromDate').datetimepicker({
      timepicker: false,
      datepicker: true,
      format: 'd/m/Y',
    });
    $('#toDate').datetimepicker({
      timepicker: false,
      datepicker: true,
      format: 'd/m/Y',
    });
  </script>
}


