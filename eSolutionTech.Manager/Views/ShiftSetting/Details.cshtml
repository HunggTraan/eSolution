@model eSolutionTech.ViewModels.Catalog.ShiftSettings.ShiftSettingViewModel

@{
  ViewData["Title"] = "Details";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
  <h1 class="mt-4">Chi tiết</h1>
  <ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
    <li class="breadcrumb-item active">Chi tiết</li>
  </ol>
  <div class="card mb-4">
    <div class="card-header">
      <a class="btn btn-success" asp-action="Index" asp-controller="ShiftSetting">Về danh sách</a>
    </div>
    <div class="card-body">
      <div class="col-md-12">
        <dl class="row">
          <dt class="col-sm-2">
            Mã loại khai báo
          </dt>
          <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
          </dd>
          <dt class="col-sm-2">
            Tên loại khai báo
          </dt>
          <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
          </dd>
          <dt class="col-sm-2">
            Thời gian vào
          </dt>
          <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeIn)
          </dd>
          <dt class="col-sm-2">
            Thời gian tối đa chấm công
          </dt>
          <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExceedTimeIn)
          </dd>
          <dt class="col-sm-2">
            Thời gian ra
          </dt>
          <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeOut)
          </dd>
          <dt class="col-sm-2">
            Thời gian nghỉ
          </dt>
          <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RestTime)
          </dd>
        </dl>
      </div>
    </div>
  </div>
</div>
