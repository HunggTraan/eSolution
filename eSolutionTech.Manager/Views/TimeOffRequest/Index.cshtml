@using eSolutionTech.ViewModels.Common

@model PagedResult<eSolutionTech.ViewModels.Catalog.TimeOffRequests.TimeOffViewModel>
@{
  ViewData["Title"] = "Danh sách ngày nghỉ";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
  <ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
    <li class="breadcrumb-item active">Danh sách ngày nghỉ</li>
  </ol>
  <div class="card mb-12">
    <div class="card-header">
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <a class="btn btn-secondary" id="filter">Tìm kiếm</a>
        </div>
        <div class="col-md-6 col-xs-12">
        </div>
      </div>
    </div>

    <div class="card-body">
      <div class="row">
        @if (ViewBag.SuccessMsg != null)
        {
          <div id="msgAlert" class="alert alert-success" role="alert">
            @ViewBag.SuccessMsg
          </div>
        }
      </div>
      <div class="card-header hidden" id="filterField">
        <form asp-action="Index" method="get">
          <div class="row">
            <div class="col-md-10">
              <div class="form-group row">
                <div class="col-md-2">
                  <label>Từ ngày</label>
                </div>
                <div class="col-md-4">
                  <input id="fromDate" name="fromDate" type="text" value="@ViewBag.FromDate" class="form-control" />
                </div>
                <div class="col-md-2">
                  <label>Đến ngày</label>
                </div>
                <div class="col-md-4">
                  <input id="toDate" name="toDate" type="text" value="@ViewBag.ToDate" class="form-control" />
                </div>
              </div>
              <div class="form-group row mt-2">
                <div class="col-md-2">
                  <label>Loại lịch xin nghỉ</label>
                </div>
                <div class="col-md-4">
                  <select asp-items="@ViewBag.TimeOffType" name="timeOffTypeId" class="form-control">
                    <option value="">Tất cả</option>
                  </select>
                </div>
                <div class="col-md-2">
                  <label>Trạng thái</label>
                </div>
                <div class="col-md-4">
                  <select name="status" class="form-control">
                    <option value="">Tất cả</option>
                    <option value="0">Chờ duyệt</option>
                    <option value="1">Đã duyệt</option>
                    <option value="2">Từ chối</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="col-md-2">
              <button type="submit" class="btn btn-primary">Tìm</button>
              <button type="button" onclick="window.location.href='/User/Index'" class="btn btn-secondary">Đặt lại</button>
            </div>
          </div>
        </form>
      </div>
      <div class="table-responsive">
        <table class="table table-striped table-bordered" width="100%" id="dataTable">
          <thead>
            <tr>
              <th class="text-center">
                Tên
              </th>
              <th class="text-center">
                Loại ngày nghỉ
              </th>
              <th class="text-center">
                Ngày bắt đầu
              </th>
              <th class="text-center">
                Ngày kết thúc
              </th>
              <th class="text-center">
                Trạng thái
              </th>
              <th class="text-center">Hành động</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var item in Model.Items)
            {
              <tr>
                <td class="text-center">
                  <a href="#" onclick="details('@item.Id')" name="Chi tiết">
                    @Html.DisplayFor(modelItem => item.Name)
                  </a>
                </td>
                <td class="text-center">
                  @Html.DisplayFor(modelItem => item.TimeOffType)
                </td>
                <td class="text-center">
                  @Convert.ToDateTime(item.FromDate).ToString("dd/MM/yyyy")
                </td>
                <td class="text-center">
                  @Convert.ToDateTime(item.ToDate).ToString("dd/MM/yyyy")
                </td>
                @switch (item.Status)
                {
                  case "0":
                    <td class="text-center">Chờ duyệt</td>
                    break;
                  case "1":
                    <td class="text-center">Đã duyệt</td>
                    break;
                  case "2":
                    <td class="text-center">Từ chối</td>
                    break;
                }
                <td class="text-center">
                  @if (item.Status == "0")
                  {
                    <a class="btn btn-primary" onclick="apply('@item.Id', true)">
                      <i> Duyệt</i>
                    </a>
                    <a class="btn btn-danger" onclick="apply('@item.Id', false)">
                      <i> Từ chối</i>
                    </a>
                  }
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
      @await Component.InvokeAsync("Pager", Model)
    </div>
  </div>
</div>

<div aria-hidden="true" class="inmodal modal" id="userModel" role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <div class="animated bounceInRight modal-content">
      <div class="modal-header">
        <h4 class="modal-title" style="margin-left:42%">Chi tiết</h4>
      </div>
      <div class="modal-body">
        <div class="form-group row">
          <label class="col-form-label col-lg-4 font-bold">Tên lịch xin nghỉ:</label>
          <div class="col-lg-8">
            <p class="form-control-plaintext lblCode"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-4 font-bold">Mô tả:</label>
          <div class="col-lg-8">
            <p class="form-control-plaintext lblFullName"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-4 font-bold">Từ ngày:</label>
          <div class="col-lg-8">
            <p class="form-control-plaintext lblUserName"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-4 font-bold">Đến ngày:</label>
          <div class="col-lg-8">
            <p class="form-control-plaintext lblJobTitle"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-4 font-bold">Nhân viên:</label>
          <div class="col-lg-8">
            <p class="form-control-plaintext lblDepartment"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-4 font-bold">Mã nhân viên:</label>
          <div class="col-lg-8">
            <p class="form-control-plaintext lblPhoneNumber"></p>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-white" data-bs-dismiss="modal" type="button">Đóng</button>
      </div>
    </div>
  </div>
</div>

@section Styles {
  <link href="~/libs/datetimepicker/jquery.datetimepicker.css" rel="stylesheet" />
}

@section Scripts{
  <script src="~/libs/datetimepicker/jquery.datetimepicker.full.js" type="text/javascript"></script>
  <script type="text/javascript">
    $(document).ready(function () {
      initDataTable();
    });

        function details(ids) {
      $.get(
        '@Url.Action("GetRequestById", "TimeOffRequest")',
        { id: ids },
        (response) => {
          if (response != null) {
            let d = response;
            $('#userModel .modal-body .lblCode').html(d.name);
            $('#userModel .modal-body .lblFullName').html(d.description);
            $('#userModel .modal-body .lblUserName').html(d.fromDateText);
            $('#userModel .modal-body .lblJobTitle').html(d.toDateText);
            $('#userModel .modal-body .lblDepartment').html(d.userName);
            $('#userModel .modal-body .lblPhoneNumber').html(d.userCode);
            $('#userModel').modal('show');
          }
        }
      )
    }

    function apply(ids, isApply) {
      if (!confirm("Bạn có chắc chắn muốn duyệt bản ghi này?")) {
        return false;
      }
      else {
        var model = {};
        model.Id = ids;
        if (isApply) {
          model.Status = "1";
        }
        else{
          model.Status = "2";
        }

        var items = JSON.stringify(model);

         $.ajax({
            type: "POST",
            url: '@Url.Action("Apply")',
            data: items,
            //dataType: "text",
            contentType: "application/json; charset=utf-8",
            success: function () {
              window.location.href = '/TimeOffRequest/Index';
            },
            error: function () {
                alert("Có lỗi xảy ra!");
            }
        });
      }
    };

    $('#filter').on('click', function () {
      if ($('#filterField').is(":visible")) {
        $('#filterField').addClass('hidden');
      }
      else
        $('#filterField').removeClass('hidden');
    });

    $('#fromDate').datetimepicker({
      timepicker: false,
      datepicker: true,
      format: 'd/m/Y',
    });
    $('#toDate').datetimepicker({
      timepicker: false,
      datepicker: true,
      format: 'd/m/Y',
    });
  </script>

}


