@using eSolutionTech.ViewModels.Common

@model PagedResult<eSolutionTech.ViewModels.Catalog.TimeOffRequests.TimeOffViewModel>
@{
  ViewData["Title"] = "Danh sách ngày nghỉ";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
  <h1 class="mt-4">Danh sách ngày nghỉ</h1>
  <ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
    <li class="breadcrumb-item active">Danh sách ngày nghỉ</li>
  </ol>
  <div class="card mb-12">
    <div class="card-header">
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <a class="btn btn-success" asp-action="Create" asp-controller="TimeOffRequest">Tạo mới</a>
        </div>
        <div class="col-md-6 col-xs-12">
          <form asp-action="Index" method="get">
            <div class="row">
              <div class="col-md-8">
                <input type="text" value="@ViewBag.Keyword" name="keyword" class="form-control" />
              </div>
              <div class="col-md-4">
                <button type="submit" class="btn btn-primary">Tìm</button>
                <button type="button" onclick="window.location.href='/TimeOffRequest/Index'" class="btn btn-secondary">Đặt lại</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="card-body">
      <div class="row">
        @if (ViewBag.SuccessMsg != null)
        {
          <div id="msgAlert" class="alert alert-success" role="alert">
            @ViewBag.SuccessMsg
          </div>
        }
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered" width="100%" id="dataTable">
          <thead>
            <tr>
              <th class="text-center">
                Tên
              </th>
              <th class="text-center">
                Loại ngày nghỉ
              </th>
              <th class="text-center">
                Ngày bắt đầu
              </th>
              <th class="text-center">
                Ngày kết thúc
              </th>
              <th class="text-center">
                Trạng thái
              </th>
              <th class="text-center">Hành động</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var item in Model.Items)
            {
              <tr>
                <td class="text-center">
                  <a href="@Url.Action("Details", new { id = item.Id })" name="Chi tiết">
                    @Html.DisplayFor(modelItem => item.Name)
                  </a>
                </td>
                <td class="text-center">
                  @Html.DisplayFor(modelItem => item.TimeOffType)
                </td>
                <td class="text-center">
                  @Convert.ToDateTime(item.FromDate).ToString("dd/MM/yyyy")
                </td>
                <td class="text-center">
                  @Convert.ToDateTime(item.ToDate).ToString("dd/MM/yyyy")
                </td>
                @switch (item.Status)
                {
                  case "0":
                    <td class="text-center">Chờ duyệt</td>
                    break;
                  case "1":
                    <td class="text-center">Đã duyệt</td>
                    break;
                  case "2":
                    <td class="text-center">Từ chối</td>
                    break;
                }
              <td class="text-center">
                @if (item.Status == "0")
                {
                  <a class="btn btn-primary" onclick="apply('@item.Id', true)">
                    <i> Duyệt</i>
                  </a>
                  <a class="btn btn-danger" onclick="apply('@item.Id', false)">
                    <i> Từ chối</i>
                  </a>
                }
              </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
      @await Component.InvokeAsync("Pager", Model)
    </div>
  </div>
</div>

@section Scripts{
  <script type="text/javascript">
    $(document).ready(function () {
      $('#dataTable').dataTable({
        "paging": false
      });
    });

    function apply(ids, isApply) {
      if (!confirm("Bạn có chắc chắn muốn duyệt bản ghi này?")) {
        return false;
      }
      else {
        var model = {};
        model.Id = ids;
        if (isApply) {
          model.Status = "1";
        }
        else{
          model.Status = "2";
        }

        var items = JSON.stringify(model);

         $.ajax({
            type: "POST",
            url: '@Url.Action("Apply")',
            data: items,
            //dataType: "text",
            contentType: "application/json; charset=utf-8",
            success: function () {
              window.location.href = '/TimeOffRequest/Index';
            },
            error: function () {
                alert("Có lỗi xảy ra!");
            }
        });
      }
    };
  </script>

}


