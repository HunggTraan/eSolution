@using eSolutionTech.ViewModels.Common

@model PagedResult<eSolutionTech.ViewModels.Catalog.TimeOffRequests.TimeOffViewModel>
@{
  ViewData["Title"] = "Danh sách ngày nghỉ";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
  <ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
    <li class="breadcrumb-item active">Danh sách ngày nghỉ</li>
  </ol>
  <div class="card mb-12">
    <div class="card-header">
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <a class="btn btn-success" asp-action="Create" asp-controller="TimeOffRequest">Tạo mới</a>
          <a class="btn btn-secondary" id="filter">Tìm kiếm</a>
        </div>
        <div class="col-md-6 col-xs-12">

        </div>
      </div>
    </div>

    <div class="card-body">
      <div class="row">
        @if (ViewBag.SuccessMsg != null)
        {
          <div id="msgAlert" class="alert alert-success" role="alert">
            @ViewBag.SuccessMsg
          </div>
        }
      </div>
      <div class="card-header hidden" id="filterField">
        <form asp-action="IndexUser" method="get">
          <div class="row">
            <div class="col-md-10">
              <div class="form-group row">
                <div class="col-md-2">
                  <label>Từ ngày</label>
                </div>
                <div class="col-md-4">
                  <input id="fromDate" name="fromDate" type="text" value="@ViewBag.FromDate" class="form-control" />
                </div>
                <div class="col-md-2">
                  <label>Đến ngày</label>
                </div>
                <div class="col-md-4">
                  <input id="toDate" name="toDate" type="text" value="@ViewBag.ToDate" class="form-control" />
                </div>
              </div>
              <div class="form-group row mt-2">
                <div class="col-md-2">
                  <label>Loại lịch xin nghỉ</label>
                </div>
                <div class="col-md-4">
                  <select asp-items="@ViewBag.TimeOffType" name="timeOffTypeId" class="form-control">
                    <option value="">Tất cả</option>
                  </select>
                </div>
                <div class="col-md-2">
                  <label>Trạng thái</label>
                </div>
                <div class="col-md-4">
                  <select name="status" class="form-control">
                    <option value="">Tất cả</option>
                    <option value="0">Chờ duyệt</option>
                    <option value="1">Đã duyệt</option>
                    <option value="2">Từ chối</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="col-md-2">
              <button type="submit" class="btn btn-primary">Tìm</button>
              <button type="button" onclick="window.location.href='/User/IndexUser'" class="btn btn-secondary">Đặt lại</button>
            </div>
          </div>
        </form>
      </div>
      <div class="table-responsive">
        <table class="table table-striped table-bordered" width="100%" id="dataTable">
          <thead>
            <tr>
              <th class="text-center">
                Tên
              </th>
              <th class="text-center">
                Mô tả
              </th>
              <th class="text-center">
                Loại ngày nghỉ
              </th>
              <th class="text-center">
                Ngày bắt đầu
              </th>
              <th class="text-center">
                Ngày kết thúc
              </th>
              <th class="text-center">
                Trạng thái
              </th>
              <th class="text-center">Hành động</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var item in Model.Items)
            {
              <tr>
                <td class="text-center">
                  @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-center">
                  @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="text-center">
                  @Html.DisplayFor(modelItem => item.TimeOffType)
                </td>
                <td class="text-center">
                  @Convert.ToDateTime(item.FromDate).ToString("dd/MM/yyyy")
                </td>
                <td class="text-center">
                  @Convert.ToDateTime(item.ToDate).ToString("dd/MM/yyyy")
                </td>
                @switch (item.Status)
                {
                  case "0":
                    <td class="text-center">Chờ duyệt</td>
                    break;
                  case "1":
                    <td class="text-center" style="color:forestgreen"><b>Đã duyệt</b></td>
                    break;
                  case "2":
                    <td class="text-center" style="color:red"><b>Từ chối</b></td>
                    break;
                }
                <td class="text-center">
                  @if (item.Status != "1" && item.Status != "2")
                  {
                    <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.Id })" name="Sửa">
                      Sửa
                    </a>
                  }
                  &ensp;
                  @if (item.Status != "1" && item.Status != "2")
                  {
                    <a class="btn btn-primary" href="#" onclick="remove('@item.Id')">Xoá</a>
                  }
                </td>
              </tr>
            }
          </tbody>
          <tfoot>
            <tr>
              <th class="text-center">
                Tên
              </th>
              <th class="text-center">
                Mô tả
              </th>
              <th class="text-center">
                Loại ngày nghỉ
              </th>
              <th class="text-center">
                Ngày bắt đầu
              </th>
              <th class="text-center">
                Ngày kết thúc
              </th>
              <th class="text-center">
                Trạng thái
              </th>
              <th class="text-center">Hành động</th>
            </tr>
          </tfoot>
        </table>
      </div>
      @await Component.InvokeAsync("Pager", Model)
    </div>
  </div>
</div>


@section Styles {
  <link href="~/libs/datetimepicker/jquery.datetimepicker.css" rel="stylesheet" />
}

@section Scripts{
  <script src="~/libs/datetimepicker/jquery.datetimepicker.full.js" type="text/javascript"></script>
  <script type="text/javascript">
    $(document).ready(function () {
      initDataTable();
    });
    function remove(ids) {
      var url = '@Url.Action("Delete")';
      var href = '/TimeOffRequest/IndexUser';
      deleteData(url, ids, href);
    };

    $('#filter').on('click', function () {
      if ($('#filterField').is(":visible")) {
        $('#filterField').addClass('hidden');
      }
      else
        $('#filterField').removeClass('hidden');
    });

    $('#fromDate').datetimepicker({
      timepicker: false,
      datepicker: true,
      format: 'd/m/Y',
    });
    $('#toDate').datetimepicker({
      timepicker: false,
      datepicker: true,
      format: 'd/m/Y',
    });
  </script>
}

