@model eSolutionTech.ViewModels.System.Users.CreateUserRequest

@{
    ViewData["Title"] = "Tạo mới người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="mt-4">Tạo mới người dùng</h1>
    <ol class="breadcrumb mb-4 mt-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
        <li class="breadcrumb-item active">Tạo mới người dùng</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="User">Về danh sách</a>
        </div>
        <div class="card-body">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label">Họ và tên</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="Code" class="control-label">Mã nhân viên</label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="DepartmentId" class="control-label">Phòng ban</label>
                        <select asp-for="DepartmentId" asp-items="@ViewBag.Department" class="form-control"></select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="JobTitleId" class="control-label">Chức danh</label>
                        <select asp-for="JobTitleId" asp-items="@ViewBag.JobTitle" class="form-control"></select>
                        <span asp-validation-for="JobTitleId" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="UserEmail" class="control-label">Thư điện tử</label>
                        <input asp-for="UserEmail" class="form-control" />
                        <span asp-validation-for="UserEmail" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="Dob" class="control-label">Ngày tháng năm sinh</label>
                        <input data-val="true" asp-for="Dob" class="form-control" type="date"/>
                        <span asp-validation-for="Dob" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label">Số điện thoại</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label">Tên đăng nhập</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Mật khẩu</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label">Nhập lại mật khẩu</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-group">
                        <input type="submit" value="Lưu lại" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="/libs/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <link href="/libs/sweetalert/dist/sweetalert.css" rel="stylesheet" />
    <link href="/libs/clockpicker/clockpicker.css" rel="stylesheet" />
}
@section Scripts{
    <script src="/libs/moment/min/moment-with-locales.min.js" type="text/javascript"></script>
    <script src="/libs/daterangepicker/daterangepicker.js" type="text/javascript"></script>
    <script src="/libs/sweetalert/dist/sweetalert.min.js" type="text/javascript"></script>
    <script src="/libs/clockpicker/clockpicker.js" type="text/javascript"></script>
}