@using eSolutionTech.ViewModels.Common;

@model PagedResult<eSolutionTech.ViewModels.System.Users.UserViewModel>

@{
  ViewData["Title"] = "Danh sách người dùng";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
  <ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
    <li class="breadcrumb-item active">Danh sách người dùng</li>
  </ol>
  <div class="card mb-12">
    <div class="card-header">
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <a class="btn btn-success" asp-action="Create" asp-controller="User">Tạo mới</a>
          <a class="btn btn-secondary" id="filter">Tìm kiếm</a>
        </div>
        <div class="col-md-6 col-xs-12">
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="row">
        @if (ViewBag.SuccessMsg != null)
        {
          <div id="msgAlert" class="alert alert-success" role="alert">
            @ViewBag.SuccessMsg
          </div>
        }
      </div>

      <div class="card-header hidden" id="filterField">
        <form asp-action="Index" method="get">
          <div class="row">
            <div class="col-md-10">
              <div class="form-group row">
                <div class="col-md-2">
                  <label>Mã nhân viên</label>
                </div>
                <div class="col-md-4">
                  <input type="text" value="@ViewBag.Code" name="code" class="form-control" />
                </div>
                <div class="col-md-2">
                  <label>Họ và tên</label>
                </div>
                <div class="col-md-4">
                  <input type="text" value="@ViewBag.FullName" name="fullname" class="form-control" />
                </div>
              </div>
              <div class="form-group row mt-2">
                <div class="col-md-2">
                  <label>Chức vụ</label>
                </div>
                <div class="col-md-4">
                  <select asp-items="@ViewBag.Department" name="departmentId" class="form-control">
                    <option value="">Tất cả</option>
                  </select>
                </div>
                <div class="col-md-2">
                  <label>Phòng ban</label>
                </div>
                <div class="col-md-4">
                  <select asp-items="@ViewBag.JobTitle" name="jobTitleId" class="form-control">
                    <option value="">Tất cả</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="col-md-2">
              <button type="submit" class="btn btn-primary">Tìm</button>
              <button type="button" onclick="window.location.href='/User/Index'" class="btn btn-secondary">Đặt lại</button>
            </div>
          </div>
        </form>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered" width="100%" id="dataTable">
          <thead>
            <tr>
              <th class="text-center" width="10%">
                Mã nhân viên
              </th>
              <th class="text-center" width="15%">
                Họ và tên
              </th>
              <th class="text-center" width="10%">
                Tên tài khoản
              </th>
              <th class="text-center" width="10%">
                Ngày sinh
              </th>
              <th class="text-center" width="15%">
                Chức vụ
              </th>
              <th class="text-center" width="15%">
                Phòng ban
              </th>
              <th class="text-center" width="25%">Hành động</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var item in Model.Items)
            {
              <tr>
                <td class="text-center">
                  @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td class="text-center">
                  @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td class="text-center">
                  @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td class="text-center">
                  @Convert.ToDateTime(item.Dob).ToString("dd/MM/yyyy")
                </td>
                <td class="text-center">
                  @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td class="text-center">
                  @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td class="text-center">
                  <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.Id })" name="Sửa">
                    Sửa
                  </a>
                  <a class="btn btn-primary" href="#" onclick="details('@item.Id');" name="Chi tiết">
                    Chi tiết
                  </a>
                  <a href="#" class="btn btn-primary" onclick="remove('@item.Id');">Xoá</a>
                  <a class="btn btn-primary" href="@Url.Action("RoleAssign", new { id = item.Id })" name="Chi tiết">
                    Phân quyền
                  </a>
                </td>
              </tr>
            }
          </tbody>
          <tfoot>
            <tr>
              <th class="text-center" width="10%">
                Mã nhân viên
              </th>
              <th class="text-center" width="15%">
                Họ và tên
              </th>
              <th class="text-center" width="10%">
                Tên tài khoản
              </th>
              <th class="text-center" width="10%">
                Ngày sinh
              </th>
              <th class="text-center" width="15%">
                Chức vụ
              </th>
              <th class="text-center" width="15%">
                Phòng ban
              </th>
              <th class="text-center" width="25%">Hành động</th>
            </tr>
          </tfoot>
        </table>
      </div>
      @await Component.InvokeAsync("Pager", Model)
    </div>
  </div>
</div>

<div aria-hidden="true" class="inmodal modal" id="userModel" role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <div class="animated bounceInRight modal-content">
      <div class="modal-header">
        <h4 class="modal-title" style="margin-left:30%">Chi tiết nhân viên</h4>
      </div>
      <div class="modal-body">
        <div class="form-group row">
          <label class="col-form-label col-lg-4 font-bold">Mã nhân viên:</label>
          <div class="col-lg-8">
            <p class="form-control-plaintext lblCode"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-4 font-bold">Họ và tên đầy đủ:</label>
          <div class="col-lg-8">
            <p class="form-control-plaintext lblFullName"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-4 font-bold">Tên đăng nhập:</label>
          <div class="col-lg-8">
            <p class="form-control-plaintext lblUserName"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-4 font-bold">Chức danh:</label>
          <div class="col-lg-8">
            <p class="form-control-plaintext lblJobTitle"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-4 font-bold">Phòng ban:</label>
          <div class="col-lg-8">
            <p class="form-control-plaintext lblDepartment"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-4 font-bold">Số điện thoại:</label>
          <div class="col-lg-8">
            <p class="form-control-plaintext lblPhoneNumber"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-4 font-bold">Thư điện tử:</label>
          <div class="col-lg-8">
            <p class="form-control-plaintext lblEmail"></p>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-4 font-bold">Vai trò:</label>
          <div class="col-lg-8">
            <p class="form-control-plaintext lblRole"></p>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-white" data-bs-dismiss="modal" type="button">Đóng</button>
      </div>
    </div>
  </div>
</div>

@section Scripts{
  <script>
    $(document).ready(function () {
        initDataTable();
    });

    function remove(ids) {
        $.confirm({
            title: 'Thông báo!',
            content: 'Bạn có chắc chắn muốn xoá bản ghi này?',
            buttons: {
                confirm: {
                    text: 'Xác nhận',
                    keys: ['enter'],
                    action: function() {
                    var model = {};
                    model.Id = ids;

                    var items = JSON.stringify(model);

                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("Delete")',
                        data: items,
                        //dataType: "text",
                        contentType: "application/json; charset=utf-8",
                        success: function () {
                            window.location.href = '/User/Index';
                        },
                        error: function () {
                          $.alert({
                            title: 'Thông báo!',
                            content: 'Có lỗi xảy ra, vui lòng thử lại sau!',
                          });
                        }
                    });
                    }
                },
                cancel: {
                  text: 'Huỷ bỏ',
                  action: function () { }
                }
            }
        });
    };

    function details(ids) {
      $.get(
        '@Url.Action("GetUserById", "User")',
        { id: ids },
        (response) => {
          if (response.isSuccessed) {
            let d = response.resultObj;
            $('#userModel .modal-body .lblCode').html(d.code);
            $('#userModel .modal-body .lblFullName').html(d.fullName);
            $('#userModel .modal-body .lblUserName').html(d.userName);
            $('#userModel .modal-body .lblJobTitle').html(d.jobTitle);
            $('#userModel .modal-body .lblDepartment').html(d.department);
            $('#userModel .modal-body .lblPhoneNumber').html(d.phoneNumber);
            $('#userModel .modal-body .lblEmail').html(d.email);
            $('#userModel .modal-body .lblRole').html(d.roles);
            $('#userModel').modal('show');
          }
        }
      )
    }

    $('#filter').on('click', function () {
      if ($('#filterField').is(":visible")){
        $('#filterField').addClass('hidden');
      }
      else
        $('#filterField').removeClass('hidden');
    });
  </script>
}