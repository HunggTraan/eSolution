@using eSolutionTech.ViewModels.Common;

@model PagedResult<eSolutionTech.ViewModels.System.Users.UserViewModel>

@{
    ViewData["Title"] = "Danh sách người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Danh sách người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách người dùng</li>
    </ol>
    <div class="card mb-12">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6 col-xs-12">
                    <a class="btn btn-success" asp-action="Create" asp-controller="User">Tạo mới</a>
                </div>
                <div class="col-md-6 col-xs-12">
                    <form asp-action="Index" method="get">
                        <div class="row">
                            <div class="col-md-8">
                                <input type="text" value="@ViewBag.Keyword" name="keyword" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary">Tìm</button>
                                <button type="button" onclick="window.location.href='/User/Index'" class="btn btn-secondary">Đặt lại</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                @if (ViewBag.SuccessMsg != null)
                {
                    <div id="msgAlert" class="alert alert-success" role="alert">
                        @ViewBag.SuccessMsg
                    </div>
                }
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-bordered" width="100%" id="dataTable">
                    <thead>
                        <tr>
                            <th class="text-center">
                                Họ và tên
                            </th>
                            <th class="text-center">
                                Tên tài khoản
                            </th>
                            <th class="text-center">
                                Ngày sinh
                            </th>
                            <th class="text-center">
                                Chức vụ
                            </th>
                            <th class="text-center">
                                Phòng ban
                            </th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td class="text-center">
                                    @Convert.ToDateTime(item.Dob).ToString("dd/MM/yyyy")
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.JobTitle)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.Department)
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Edit", new { id = item.Id })" name="Sửa">
                                        Sửa
                                    </a>
                                    &ensp;
                                    <a href="@Url.Action("Details", new { id = item.Id })" name="Chi tiết">
                                        Chi tiết
                                    </a>
                                    &ensp;
                                    <a href="@Url.Action("Delete", new { id = item.Id })" name="Chi tiết">
                                        Xoá
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @*//@await Component.InvokeAsync("Pager", Model)*@
        </div>
    </div>
</div>

@section Scripts{
    <script>
    $(document).ready(function () {
        $('#dataTable').DataTable();
    });
    var table = $('#example').DataTable();


    function remove(id) {
      JqueryConfirm(
        "Bạn có muốn xóa bản ghi này!",
        () => {
          JqueryPostJSON(
            '@Url.Action("Remove")',
            JSON.stringify({
              Id: id
            }),
            (response) => {
              if (response.Succeeded) window.location.href = '@Url.Action("Index")';
              else JqueryAlert("Xoá bản ghi!", response.Message, false);
            }
          );
        }
      );
    }
    </script>
}